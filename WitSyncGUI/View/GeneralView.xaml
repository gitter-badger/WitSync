<UserControl x:Class="WitSyncGUI.View.GeneralView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:View="clr-namespace:WitSyncGUI.View"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:WitSyncGUI.ViewModel"
             xmlns:wit="clr-namespace:WitSync;assembly=WitSyncEngine"
             d:DesignHeight="500"
             d:DesignWidth="950"
             mc:Ignorable="d">
    <UserControl.Resources>
        <vm:GeneralViewModel x:Key="viewModel" />
        <ObjectDataProvider x:Key="LoggingLevel"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="wit:LoggingLevel" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <Style x:Key="groupTitle" TargetType="Label">
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="groupBorder" TargetType="Border">
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="DarkGray" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="Margin" Value="2 0 2 0" />
        </Style>
    </UserControl.Resources>
    <Grid DataContext="{Binding Source={StaticResource viewModel}}">
        <StackPanel>
            <Label Content="Run type" Style="{StaticResource ResourceKey=groupTitle}" />
            <Border Margin="2 0 4 2"
                    HorizontalAlignment="Left"
                    Style="{StaticResource ResourceKey=groupBorder}">
                <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                    <RadioButton HorizontalAlignment="Left"
                                 Content="Test run"
                                 IsChecked="{Binding Path=IsTestRun,
                                                     Converter={StaticResource RadioButtonCheckedConverter},
                                                     ConverterParameter={StaticResource True}}" />
                    <RadioButton HorizontalAlignment="Left"
                                 Content="Production"
                                 IsChecked="{Binding Path=IsTestRun,
                                                     Converter={StaticResource RadioButtonCheckedConverter},
                                                     ConverterParameter={StaticResource False}}" />
                </StackPanel>
            </Border>
            <StackPanel Orientation="Horizontal">
                <Border Margin="2 4"
                        Padding="2 2 2 6"
                        Style="{StaticResource ResourceKey=groupBorder}">
                    <StackPanel>
                        <Label Content="Source" Style="{StaticResource ResourceKey=groupTitle}" />
                        <View:TfsProjectControl MinWidth="450"
                                                DataContext="{Binding Path=SourceConnection}"
                                                CollectionUrl="{Binding Path=CollectionUrl}"
                                                ProjectName="{Binding Path=ProjectName}"
                                                Password="{Binding Path=Password}"
                                                UserName="{Binding Path=User}" />
                    </StackPanel>
                </Border>
                <Border Margin="2 4"
                        Padding="2 2 2 6"
                        Style="{StaticResource ResourceKey=groupBorder}">
                    <StackPanel>
                        <Label Content="Destination" Style="{StaticResource ResourceKey=groupTitle}" />
                        <View:TfsProjectControl MinWidth="450"
                                                DataContext="{Binding Path=DestinationConnection}"
                                                CollectionUrl="{Binding Path=CollectionUrl}"
                                                ProjectName="{Binding Path=ProjectName}"
                                                Password="{Binding Path=Password}"
                                                UserName="{Binding Path=User}" />
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Margin="0 10 0 0" Orientation="Horizontal">
                <Label Content="Logging level" />
                <ComboBox Width="100"
                          ItemsSource="{Binding Source={StaticResource LoggingLevel}}"
                          SelectedValue="{Binding Path=Logging}" />
                <Label Margin="10 0 0 0" Content="Logging file" />
                <TextBox MinWidth="180" Text="{Binding Path=LogFile}" />
                <Label Margin="10 0 0 0" Content="ChangeLog file" />
                <TextBox MinWidth="180" Text="{Binding Path=ChangeLogFile}" />
                <CheckBox Margin="14,0,0,0"
                          VerticalAlignment="Center"
                          Content="Stop Pipeline on first Error"
                          IsChecked="{Binding Path=StopPipelineOnFirstError}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
